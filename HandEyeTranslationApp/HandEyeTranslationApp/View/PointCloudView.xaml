             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HandEyeTranslationApp.View"
             mc:Ignorable="d" DataContext="{Binding Source={StaticResource Locator},Path=PointCloud}"
             d:DesignHeight="500" d:DesignWidth="700" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <TextBlock Margin="100,0" Text="X" Width="10" Height="16" FontSize="16"/>
            <TextBlock Margin="100,0" Text="Y" Width="10" Height="16" FontSize="16"/>
            <TextBlock Margin="100,0" Text="Z" Width="10" Height="16" FontSize="16"/>
        </StackPanel>
        <Label Grid.Row="1" Content="1" HorizontalAlignment="Center" FontSize="16"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBox Name="tbxCameraX1" Margin="55,6" Width="100" Height="20" FontSize="16" />
            <TextBox Name="tbxCameraY1" Margin="55,6" Width="100" Height="20" FontSize="16" />
            <TextBox Name="tbxCameraZ1" Margin="55,6" Width="100" Height="20" FontSize="16" />
